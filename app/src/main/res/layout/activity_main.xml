<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/activity_gasolina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Gasolina"
        android:layout_margin="16dp"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/activity_alcool"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Alcool"
        android:layout_margin="16dp"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/activity_gasolina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/activity_gasolina"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Calcular"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/activity_alcool"
        app:layout_constraintTop_toBottomOf="@id/activity_alcool"
        />

</androidx.constraintlayout.widget.ConstraintLayout>